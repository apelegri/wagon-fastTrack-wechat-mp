<!--pages/curriculum/curriculum.wxml-->
<!-- HEADER GRADIENT-->
<view class="green-gradient tc">
 <view class="h1-gradient"> <text class="em">Fast</text>-track program</view>
</view>
<!-- CARD TOP BODY PAGE -->
<view class="container">
 <view class="card-border-left">
  <view class="card-head-section">
   <view class="h1">
Learn how the web works. In China.   
   </view>
   <view class="card-desc">
   “Software is eating the world. China in particular. This accelerated course allows non-tech managers to demystify how any website works, think like developers and build WeChat applications from scratch!“
   </view>
  </view>
  <view class="card-profile">
   <view class="card-avatar">
   </view>
   <view class="avatar-info">
    <view class="avatar-name">Boris Paillard</view>
    <text class="position">Le Wagon CEO</text>
   </view>
  </view>
 </view>
<!-- CARD SHNAGHAI -->
 <view class="card-shanghai">
  <view class="desc-shanghai-card">September 19th - November 19th
   <view class="subtitle-shanghai-card">Course in English</view>
  </view>
 </view>
 <view class="logo-title-box h2 tc">
  <image src="/image/white_logo_red_circle.png"></image>
  <view class="text-box">
   <view class="grey-text">PART-TIME COURSE</view>
   <text>8 WEEKS. FROM 0 TO HERO.</text>
  </view>
 </view>
</view>
<!-- SWIPER -->
<view class="swiper-wrap">
 <swiper indicator-dots="{{indicatorDots}}" indicator-color="rgba(255, 255, 255, 0.4)" indicator-active-color="rgba(255, 255, 255, 1)" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular>
 <view class="lecture">
  <block wx:for="{{courses}}" wx:key="">
    <swiper-item id="{{item.id}}" bindtap="showRedirect">
       <text class="h1-white">{{item.title}}</text>
       <text class="desc-white">{{item.subTitle}}</text>
       <view class="tags">
        <ul>
          <li>LECTURE</li>
          <li>WORKSHOP</li>
        </ul>
       </view>
       <view class="img-grad"></view>
       <image src="{{item.img}}" mode="aspectFill" class="image-style"/>
       
     
    </swiper-item>
   </block>
  </view> 
 </swiper>
</view>
<!-- OVERVIEW FAST TRACK BENEFITS  -->
<view class="container">
 <view class="text-header-box h2 tc">
