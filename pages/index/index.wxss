/* Video */
.video {
  height: 180px;
  width:85%;
  margin-bottom: 25rpx;
  box-shadow: 3px 6px 16px 0px rgba(0,0,0,0.2);
}

  

/* Animation */

image {
  width: 70px;
  height: 70px;
  z-index: 1;
  position:relative;
}


/* Active animation */

.scrolldown {
	position: absolute;
  bottom:45px;
	left: 40%;
	display: block;
	text-align: center;
	line-height: 50px;
	border-radius: 100%;
	height: 70px;
	width: 70px;
	z-index: 1;
	transition: transform ease-out .1s,background .2s;
}

.scrolldown:after {
	pointer-events: none;
	position: absolute;
	width: 100%;
	height: 100%;
	border-radius: 50%;
	content: '';
	box-sizing: content-box
}


.scrolldown:after {
	top: 0;
	left: 0;
	padding: 0;
	z-index: -1;
	box-shadow: 0 0 0 2px rgba(170,170,170,.1);
	opacity: 0;
  animation: sonarEffect 1.3s ease-out infinite;
}

@keyframes sonarEffect {
	0% {
		opacity: .3
	}
	40% {
		opacity: .5;
		box-shadow: 0 0 0 2px rgba(170,170,170,.4),0 0 10px 10px #AAA,0 0 0 10px rgba(170,170,170,.8)
	}

	100% {
		box-shadow: 0 0 0 2px rgba(170,170,170,.4),0 0 10px 10px #AAA,0 0 0 10px rgba(170,170,170,.8);
		transform: scale(1.5);
		opacity: 0
	}
}



/* Circle animation not smooth */

.sonar {
  position: absolute;
  bottom:33px;
}
.sonar:before {
   content: '';
   top: 0;
   left: 0;
   border-radius:100%;
   background-color: #D8D8D8;
 
   position:absolute;
   animation: jumper 3s 0.22222s linear infinite;
}
.sonar:after{  
   content: '';
   top: 0;
   left: 0;
   border-radius:100%;
   background-color: #D8D8D8;
   animation: jumper 3s 0.55555s linear infinite;
   position:absolute;
   transform: scale(3);
}
@keyframes jumper {
  0% {
    transform: scale(1);
    width: 70px;
    height: 70px;
    border-width:5px;
    opacity:1;
  }
  50% {
   transform: scale(2);
   opacity:0.5;
   border-width:2.5px;
  }
  100% {
    transform: scale(3);
    opacity:0;
    border-width:1px;
  }
}





