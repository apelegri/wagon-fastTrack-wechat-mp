/* Video */
.video {
  height: 180px;
  width:85%;
  margin-bottom: 25rpx;
  box-shadow: 3px 6px 16px 0px rgba(0,0,0,0.2);
}

  

/* Animation */

image {
  width: 70px;
  height: 70px;
  z-index: 1;
  position:relative;
}

.sonar {
  position: absolute;
  bottom:33px;
}
.sonar:before {
   content: '';
   top: 0;
   left: 0;
   border-radius:100%;
   background-color: #D8D8D8;
   animation-fill-mode: both;
   position:absolute;
   opacity: 0; 
   animation: jumper 1.8s 0.33333s ease-out infinite;
}
.sonar:after{  
   content: '';
   top: 0;
   left: 0;
   border-radius:100%;
   background-color: #D8D8D8;
   animation-fill-mode: both;
   position:absolute;
   opacity: 0; 
   animation: jumper 1.8s 0.66666s ease-out infinite;
}
@keyframes jumper {
  from {
    width: 70px;
    height: 70px;
    border-width:5px;
    opacity:1;
  }
  to {
    transform: scale(3);
    opacity:0;
    border-width:1px;
  }
}

