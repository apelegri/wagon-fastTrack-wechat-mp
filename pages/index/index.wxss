/**index.wxss**/
.header-index::before {
    content: '';
    width: 100%;
    height: 230px;
    z-index: -1000;
    background-image: linear-gradient(-225deg, #FFE29F 0%, #FFA99F 48%, #FF719A 100%);
    transform-origin: left bottom;
    position: absolute;
    top: 0;
    left: 0;
    -webkit-transform: skew(0deg, -15deg);
    transform: skew(0deg, -15deg);
}
.header-index:after {
    content: '';
    width: 100%;
    height: 250px;
    z-index: -1001;
    background-image: linear-gradient(-225deg, #FF719A 0%, #FFA99F 48%, #FFE29F 100%);
    transform-origin: right bottom;
    position: absolute;
    top: 0;
    left: 0;
    -webkit-transform: skew(0deg, 9deg);
    transform: skew(0deg, 9deg);
    opacity: 0.4;
}
