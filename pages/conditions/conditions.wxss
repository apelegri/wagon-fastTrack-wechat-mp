.container {
  padding: 0rpx 20rpx;
}

.blue-gradient:before {
  content: '';
  width: 100%;
  height: 230px;
  z-index: -1000;
  background-image: linear-gradient(to right, #1cd8d2, #93edc7);
  transform-origin: left bottom;
  position: absolute;
  top: 0;
  left: 0;
  transform: skew(0deg, -15deg);
}
.blue-gradient:after {
    content: '';
    width: 100%;
    height: 250px;
    z-index: -1001;
    background-image: -webkit-linear-gradient(left, #1cd8d2, #93edc7);
    background-image: linear-gradient(to right, #1cd8d2, #93edc7);
    -webkit-transform-origin: right bottom;
    transform-origin: right bottom;
    position: absolute;
    top: 0;
    left: 0;
    -webkit-transform: skew(0deg, 9deg);
    transform: skew(0deg, 9deg);
    opacity: 0.4;
}
