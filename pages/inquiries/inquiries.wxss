/* FIX COMMON STYLE */
.h3 {
  margin-top:20rpx;
}
/* CARD */ 
.card {
  background-color: white;
  border-radius: 8rpx;
  box-shadow: 0px 6px 12px 0px rgba(0,0,0,0.2);
  min-height:135px;
  max-width:100%;
  position: relative;
  margin-bottom:45rpx
}
.card-content {
  padding:30rpx; 
}
.card-desc {
  margin-top: 20rpx;
  color: #AAA;
  font-size: 28rpx;
}
.contact image {
  width:50rpx;
  height:50rpx;
}
.contact {
  margin-top:30rpx;  
}
.contact-info {
  margin-top:30rpx;
  margin-left:35px;
}
.contact-info text {
  margin-left: 25rpx;
  padding-bottom: 10rpx;
}
.gif image {
  width:348px;
  height: 200px;
}